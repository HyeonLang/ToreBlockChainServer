{
  "name": "tore-blockchain-server",
  "version": "1.0.0",
  "private": true,
  "description": "ToreBlockChainServer - 블록체인 기반 NFT 및 토큰 시스템",
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist blockchain/cache blockchain/artifacts typechain",
    "dev": "tsx watch backend/src/app.ts",
    "start": "node dist/app.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "hh": "hardhat",
    "compile": "hardhat compile",
    "deploy:fuji": "hardhat run blockchain/scripts/deploy.ts --network fuji",
    "deploy:avalanche": "hardhat run blockchain/scripts/deploy.ts --network avalanche",
    "deploy:vault": "hardhat run blockchain/scripts/deployVault.ts --network hardhat",
    "deploy:vault:fuji": "hardhat run blockchain/scripts/deployVault.ts --network fuji",
    "deploy:vault:avalanche": "hardhat run blockchain/scripts/deployVault.ts --network avalanche",
    "test:vault": "hardhat run blockchain/scripts/testVault.ts --network hardhat",
    "test:vault:fuji": "hardhat run blockchain/scripts/testVaultOnFuji.ts --network fuji",
    "deploy:tore:fuji": "hardhat run blockchain/scripts/deployToreToken.ts --network fuji",
    "deploy:tore:avalanche": "hardhat run blockchain/scripts/deployToreToken.ts --network avalanche",
    "deploy:factory:fuji": "hardhat run blockchain/scripts/deployMultiTokenFactory.ts --network fuji",
    "deploy:factory:avalanche": "hardhat run blockchain/scripts/deployMultiTokenFactory.ts --network avalanche"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "ethers": "^6.13.2",
    "hardhat": "^2.22.5",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "solc": "^0.8.26",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.3",
    "tsx": "^4.19.0",
    "typechain": "^8.3.2",
    "typescript": "^5.5.4"
  }
}