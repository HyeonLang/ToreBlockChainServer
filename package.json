{
  "name": "hardhat-ts-express-template",
  "version": "0.1.0",
  "private": true,
  "description": "Hardhat + TypeScript + Express template with ERC721 GameItem and Avalanche deployment",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist cache artifacts typechain",
    "dev": "tsx watch src/app.ts",
    "start": "node dist/app.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "hh": "hardhat",
    "compile": "hardhat compile",
    "deploy:fuji": "hardhat run scripts/deploy.ts --network fuji",
    "deploy:avalanche": "hardhat run scripts/deploy.ts --network avalanche",
    "deploy:tore:fuji": "hardhat run scripts/deployToreToken.ts --network fuji",
    "deploy:tore:avalanche": "hardhat run scripts/deployToreToken.ts --network avalanche",
    "deploy:exchange:fuji": "hardhat run scripts/deployToreExchange.ts --network fuji",
    "deploy:exchange:avalanche": "hardhat run scripts/deployToreExchange.ts --network avalanche"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "ethers": "^6.13.2",
    "hardhat": "^2.22.5",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "solc": "^0.8.26",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.3",
    "tsx": "^4.19.0",
    "typechain": "^8.3.2",
    "typescript": "^5.5.4"
  }
}