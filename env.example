# Server
PORT=3000
NODE_ENV=development

# Blockchain RPC / Keys
WSS_PROVIDER_URL=wss://your-avalanche-provider.example.com/ws
RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
PRIVATE_KEY=0xabc123yourprivatekey

# Contract Addresses
CONTRACT_ADDRESS=0xYourCoreNftContract
MARKETPLACE_VAULT_ADDRESS=0xYourMarketplaceVault
NFT_VAULT_ADDRESS=0xYourNftVault
MULTI_TOKEN_FACTORY_ADDRESS=0xYourMultiTokenFactory

# Downstream API
MAIN_SERVER_API_URL=http://localhost:3001

# Redis (choose single URL or host/port credentials)
# Redis URL 사용 시 아래 호스트/포트 설정은 무시됩니다.
REDIS_URL=redis://127.0.0.1:6379
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_USERNAME=
# REDIS_PASSWORD=
# REDIS_CONNECTION_NAME=tore-blockchain-server

# Pinata (optional but recommended)
PINATA_API_KEY=
PINATA_SECRET_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Worker Settings
BLOCKCHAIN_EVENT_WORKER_CONCURRENCY=5

# Hardhat / Deployment Defaults
NFT_NAME=GameItem
NFT_SYMBOL=GMI

